@model IEnumerable<SmartBus.Models.Tarifa>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Ruta.Origen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Ruta.Destino)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Precio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ruta.Origen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ruta.Destino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.TarifaId })

                @if (User.IsInRole("Admin"))
                {
                    @Html.Raw(" | ")
                    @Html.ActionLink("Edit", "Edit", new { id = item.TarifaId })
                    @Html.Raw(" | ")
                    @Html.ActionLink("Delete", "Delete", new { id = item.TarifaId })
                }
            </td>
        </tr>
    }
</table>
